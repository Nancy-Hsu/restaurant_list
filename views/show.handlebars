<h1 class="mb-1 restaurant-show-title">{{ restaurant.name }}</h1>
<div class="container">
  <div class="row">
    <div class="col-12 col-md-10 mx-auto">

      <div class=" d-flex text-center mb-3 align-items-baseline">
        <a href="/">返回</a>
        <a href="/restaurant/{{ restaurant._id }}/edit" class="mx-3">編輯</a>
        <form action="/restaurant/{{restaurant._id }}?_method=DELETE" method="post">
          <button type="submit" class="btn btn-primary btn-delete" onclick="return isDelete()">刪除</button>
        </form>
      </div>


      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-utensils pr-2"></i>
          類別：
        </span>
        {{ restaurant.category }}
      </p>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-map-marker-alt pr-2"></i>
          地址：
        </span>
        {{ restaurant.location }}
        <a href="{{ restaurant.google_map }}
" class="text-secondary" target="_blank">
          <i class="fas fa-location-arrow pr-2 fa-xs"></i>
        </a>
      </p>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-mobile-alt pr-2"></i>
          電話：
        </span>
        {{ restaurant.phone }}
      </p>

      <p class="mb-5">
        {{ restaurant.description }}

      </p>

      <img class="rounded mx-auto d-block mb-4 w-100" src="{{ restaurant.image }}" alt="{{ restaurant.name }}"
        style="max-width: 600px;">
    </div>
  </div>
</div>

<script>
  function isDelete() {
    return confirm('確定要把這間餐廳刪除嗎?')
  }
</script>