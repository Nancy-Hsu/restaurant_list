<div class="row page w-100">
  <div class="col-md-4 m-auto bg-light pt-2" id="top-menu">
    <ul class="nav nav-pills mb-3 nav-fill border-bottom " id="pills-tab" role="tablist">
      <li class="nav-item" role="presentation">
        <a class="nav-link {{#if login }} active {{/if}} text-muted " id="pills-login-tab" data-toggle="pill" href="#login"
          data-target="#login" aria-selected="true" role="tab">ALREADY A
          MEMBER</a>

      </li>
      <li class="nav-item" role="presentation">
        <a class="nav-link {{#if register }} active {{/if}} text-muted " id="pills-create-tab" data-toggle="pill" href="#create"
          data-target="#create" aria-selected="false" role="tab" tabindex="-1">I AM NEW HERE</a>


      </li>
    </ul>
    <div class="tab-content" id="pills-tabContent">
      <div class="tab-pane fade {{#if login}} show active {{/if }} mt-0 pt-0" id="login" role="tabpanel" aria-labelledby="pills-login-tab">
        <form class="m-2 pt-3" action="/user/login" method="post">
          <div class="mb-3">
            <input type="email" name="email" placeholder="EMAIL" class="fs-5 p-2 mb-3 w-100" required>
          </div>

          <div class="mb-3">
            <input type="password" name="password" placeholder="PASSWORD" class="fs-5 p-2 w-100" required>
          </div>



          <button class="btn btn-primary mt-4 w-100" type="submit">Log In</button>
          <a href="/auth/facebook" class="btn btn-info btn-block w-100 mt-2">Facebook Login</a>
        </form>
      </div>
      <div class="{{#if register}} show active {{/if }} tab-pane fade mt-0 pt-0" id="create" role="tabpanel" aria-labelledby="pills-create-tab">
        <form action="/user/register" method="POST">
          <div class="mb-3">
            <label for="name" class="mb-2">Name</label>
            <input type="text" id="name" name="name" class="form-control" placeholder="Name" value="{{ input.name }}">
          </div>
          <div class="mb-3">
            <label for="email" class="mb-2">Email</label>
            <input type="email" id="email" name="email" class="form-control" placeholder="Email"
              value="{{ input.email }}">
          </div>
          <div class="mb-3">
            <label for="password" class="mb-2">Password</label>
            <input type="password" id="password" name="password" class="form-control" placeholder="Password"
              value="{{ input.password }}">
          </div>
          <div class="mb-3">
            <label for="confirmPassword" class="mb-2">Confirm Password</label>
            <input type="password" id="confirmPassword" name="confirmPassword" class="form-control"
              placeholder="Enter Password again" value="{{ input.confirmPassword  }}">
          </div>

          <button type="submit" class="btn btn-dark btn-block">Register</button>
          <a href="/auth/facebook" class="btn btn-info btn-block">Facebook Login</a>
        </form>
      </div>

    </div>
  </div>



  <style>
    .page {
      display: flex;
      position: fixed;
      top: 15%;
    }

    .btn {
      color: aliceblue;
      background-color: #4592af;
      border: 0px;
    }

      .btn:hover{
      background-color: #76a6b7;
    }
  </style>